pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                sh './gradlew test'
            }

        }
        stage('Clean') {
            steps {
                sh './gradlew clean'
            }
        }
        stage('Build') {
            steps {
                sh './gradlew build'
            }
        }
        stage('Start') {
            steps {
                sh 'java -jar build/libs/evilduck-0.0.1-SNAPSHOT.jar'
            }
        }
    }
}

