pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                bat 'gradlew test'
            }

        }
        stage('Clean') {
            steps {
                bat 'gradlew clean'
            }
        }
        stage('Build') {
            steps {
                bat 'gradlew build'
            }
        }
        stage('Start') {
            steps {
                bat 'java -jar build/libs/evilduck-0.0.1-SNAPSHOT.jar
            }
        }
    }
}



